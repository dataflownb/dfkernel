{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "..",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strictNullChecks": true,
    "target": "es2017",
    "types": ["node","graphlib"]
  },
  "include": ["src/*"],
  "references": [
    {
      "path": "../dfoutputarea",
      "composite": true
    }
  ]
}
